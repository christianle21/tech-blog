<div class="container-fluid form-top">

  <div class="mb-3">
    <form class="form signup-form">
      <label for="exampleFormControlInput1" class="form-label">Full Name</label>
      <input type="text" class="form-control" id="name-signup" placeholder="Lili Collins">
      <div class="form-group">
        <label for="email-login" class="form-label mt-2">Email</label>
        <input class="form-control" type="text" id="email-signup" placeholder="name@example.com">
        <div id="emailHelp" class="form-text-b">Your email is confidential.</div>
      </div>
      <div class="form-group">
        <label for="password-login" class="form-label">Password</label>
        <input class="form-control" type="password" id="password-signup" placeholder="Password">
        <div class="col-auto">
          <span id="passwordHelpInline" class="form-text-b">
            Password must be 8-20 characters long.
          </span>
        </div>
        <label for="password-login" class="form-label">Please re-enter Password</label>
        <input class="form-control" type="password" id="password-signup2" placeholder="Password">
        <div class="col-auto">
          <span id="passwordHelpInline" class="form-text-b">
            Must be the same as previous one.
          </span>
        </div>
      </div>

      <button type="submit" class="btn btn-blue mt-3" id="signup-btn">Submit</button>
    </form>

  </div>

  <script src="/js/signup.js"></script>